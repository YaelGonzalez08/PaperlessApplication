<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_8"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".searchList.view.MessageLPDFragment">

    <TextView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="@dimen/dimen_1"/>

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Vuelo LPD?"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_110"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/imagen"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:background="@drawable/ic_error"
        android:backgroundTint="@color/color_rojo_carmin"
        android:layout_marginTop="@dimen/dimen_28"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo" />

    <TextView
        android:id="@+id/txt_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Antes de comenzar, debes indicar si este formato es para un vuelo de alto riesgo"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14"
        android:textStyle="normal"
        android:layout_marginTop="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen" />


    <TextView
        android:id="@+id/btnSi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/background_logout_button"
        android:layout_marginHorizontal="@dimen/dimen_28"
        android:backgroundTint="@color/primaryLightColor"
        android:gravity="center"
        android:padding="@dimen/dimen_8"
        android:text="SI"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mensaje"
        app:layout_constraintEnd_toStartOf="@id/btnNo"/>

    <TextView
        android:id="@+id/btnNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_28"
        android:background="@drawable/background_logout_button"
        android:backgroundTint="@color/primaryLightColor"
        android:gravity="center"
        android:padding="@dimen/dimen_8"
        android:text="NO"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSi"
        app:layout_constraintTop_toTopOf="@+id/btnSi" />
</androidx.constraintlayout.widget.ConstraintLayout>