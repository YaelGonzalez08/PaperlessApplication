<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inspeccionAeronavePrimerVuelo.view.Succes">

    <include
        android:id="@+id/succesMessage"
        layout="@layout/item_reporte_exitoso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnAceptar"
        android:layout_width="@dimen/margin_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_60"
        android:background="@drawable/green_background_rounded"
        android:backgroundTint="@color/color_verde"
        android:clickable="true"
        android:elevation="@dimen/dimen_8"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/aceptar"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14"
        android:layout_marginTop="@dimen/dimen_16"
        android:paddingVertical="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/succesMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>