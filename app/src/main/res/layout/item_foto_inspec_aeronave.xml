<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <TextView
        android:id="@+id/tvFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imagen"
        app:layout_constraintTop_toTopOf="@id/btnBorrarFoto"
        app:layout_constraintBottom_toBottomOf="@id/btnBorrarFoto"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/common_padding_min"
        android:textSize="@dimen/dimen_12"
        />

    <TextView
        android:id="@+id/btnVerFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_eye"
        android:backgroundTint="@color/primaryLightColor"
        app:layout_constraintEnd_toStartOf="@id/btnBorrarFoto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/common_padding_middle"
        android:layout_marginRight="@dimen/common_padding_middle"
        />

    <TextView
        android:id="@+id/btnBorrarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:backgroundTint="#ff4d4d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/common_padding_middle"
        android:layout_marginRight="@dimen/common_padding_min"


        />

</androidx.constraintlayout.widget.ConstraintLayout>