<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tvNoEmpRespEstiba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btnBorrarResponsableEstiba"
        app:layout_constraintBottom_toBottomOf="@id/btnBorrarResponsableEstiba"
        app:layout_constraintStart_toStartOf="parent"
        android:text="AM188718"
        android:paddingLeft="@dimen/common_padding_min"
        android:textSize="@dimen/dimen_12"
        />


    <TextView
        android:id="@+id/tvNombreRespEstiba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del responsable de estiba"
        app:layout_constraintTop_toTopOf="@id/btnBorrarResponsableEstiba"
        app:layout_constraintBottom_toBottomOf="@id/btnBorrarResponsableEstiba"
        app:layout_constraintStart_toEndOf="@id/tvNoEmpRespEstiba"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/common_padding_min"
        android:textSize="@dimen/dimen_12"
        />

    <TextView
        android:id="@+id/btnBorrarResponsableEstiba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:backgroundTint="#ff4d4d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/common_padding_middle"

        />


</androidx.constraintlayout.widget.ConstraintLayout>