<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Stepper.CardView" parent="CardView">
        <item name="cardElevation">@dimen/card_elevation_medium</item>
        <item name="cardCornerRadius">@dimen/card_radius_default</item>
    </style>
    <!-- Menu Tab Style-->
    <style name="tab_pager_menu_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#009688</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/color_verde</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
    </style>

    <!-- Set parent theme as app theme. -->
    <style name="DialogFull" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="checkBoxStyle_blue" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
    </style>

    <style name="checkBoxStyle_BAD" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/color_rojo_carmin</item>
        <item name="android:textColorSecondary">@color/gray_text</item>
    </style>
    <!--AppInformacionFragment-->
    <style name="textViewWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <!--DatePickerDialog-->
    <style name="datePickerDialoghelper" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/color_rojo_carmin</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonsStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonsStyle</item>
    </style>
    <style name="ButtonsStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:color">@color/primaryLightColor</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--TabLayOut-->
    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:dividerPadding">@dimen/dimen_4</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
    </style>
    <!--TextViewFormFirstFlight-->
    <style name="textViewFormTitle" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/dimen_4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="textViewFormItem" parent="Widget.AppCompat.TextView">
        <item name="android:padding">@dimen/dimen_4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- Buton alert dialog CheckedMal alert -->
    <style name="dialogNoCapitalLettersInButtons" parent="android:Theme.Material.Light.Dialog">
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonsStyle</item>
    </style>
    <!-- SignatureFragemnetDialog -->
    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>
    <!-- BottomSheetDialog rounded corners -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- TextInputLayout background white -->
    <style name="Tema" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:paddingEnd">4dp</item>
    </style>
</resources>